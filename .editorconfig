# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Matches JavaScript/TypeScript files
[*.{js,jsx,ts,tsx,mjs}]
indent_style = space
indent_size = 2

# Matches JSON files
[*.json]
indent_style = space
indent_size = 2

# Matches CSS/SCSS files
[*.{css,scss,sass}]
indent_style = space
indent_size = 2

# Matches YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Matches Markdown files
[*.md]
trim_trailing_whitespace = false
